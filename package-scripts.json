{
  "scripts": {
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:auth": "playwright test tests/e2e/auth/",
    "test:user-management": "playwright test tests/e2e/user-management/",
    "test:authorization": "playwright test tests/e2e/authorization/",
    "test:validation": "playwright test tests/e2e/validation/",
    "test:performance": "playwright test tests/e2e/performance/",
    "test:accessibility": "playwright test tests/e2e/accessibility/",
    "test:security": "playwright test tests/e2e/security/",
    "test:ci": "playwright test --reporter=html,json,junit",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome','Mobile Safari'",
    "test:parallel": "playwright test --workers=4",
    "test:runner": "node scripts/test-runner.js",
    "test:report": "playwright show-report",
    "test:trace": "playwright show-trace",
    "test:install": "playwright install --with-deps",
    "test:codegen": "playwright codegen",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:test": "DATABASE_URL=$TEST_DATABASE_URL npx prisma migrate dev",
    "db:migrate:fresh": "npx prisma migrate reset --force",
    "db:seed:test": "node scripts/seed-test-data.js",
    "db:seed:performance": "node scripts/seed-performance-data.js",
    "db:cleanup:test": "node scripts/cleanup-test-data.js",
    "db:reset:test": "npm run db:migrate:fresh && npm run db:seed:test",
    "db:status": "npx prisma db show"
  }
}